@section Scripts {
    <script src="~/js/Pages/Task/CreateTask.js"></script>
}    
    <h2 class="text-center"> Crear Nueva Tarea</h2>
<div class="d-flex justify-content-center">


<form id="taskForm">
    <div class="d-flex flex-column justify-content-center">
        <div class="d-flex justify-content-center m-2 gap-4 border border-primary border-2 p-2 rounded-2">
            <div class="">
                <div class="d-flex flex-column justify-content-center">
                    <label for="Title">Título:</label>
                    <input type="text" name="Title" id="Title">
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <label for="Description">Descripción:</label>
                    <input type="text" name="Description" id="Description">
                </div>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <div class="d-flex  flex-column gap-2 justify-content-center align-content-center">
                    <label for="IsCompleted">Tarea Completada:</label>
                    <input type="checkbox" value="true" name="IsCompleted" id="IsCompleted">
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <label for="CompletedAt">Se completó (Opcional):</label>
                    <input type="datetime-local" name="CompletedAt" id="CompletedAt">
                </div>
            </div>
        </div>
        <button id="createTask" class="btn-primary mx-2" type="submit">Enviar</button>
    </div>
</form>
</div>